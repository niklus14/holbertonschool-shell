#!/usr/bin/env bash
# Process each line in /etc/passwd
while IFS=: read -r username _ user_id group_id _ home_dir shell; do
    # Display the formatted output
    echo "The user $username is part of the $group_id gang, lives in $home_dir and rides $shell. $user_id's place is protected by the passcode x, more info about the user here: $username"
done < /etc/passwd
